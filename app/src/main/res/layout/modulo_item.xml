<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/modRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/moduloAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/nomeModulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/moduloAvatar"
            android:text="Nome Modulo"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profModulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nomeModulo"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/moduloAvatar"
            android:text="Nome Modulo"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/moduloId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profModulo"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/moduloAvatar"
            android:text="Nome Modulo"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="italic" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>